    <span class="carousel-control-next-icon" aria-hidden="true"></span>
    <span class="visually-hidden">Next</span>
</button>
</div>
<div class="textcard">
    <h2 class="u-align-center u-text u-text-1">Productos</h2>
</div>
{{#if product}}
<div class="col">
    <div class="card cardshop">
        <img class="card-img-top" {{product.thumbnail}} />
        <ul>
            {{#each product.thumbnails}}
            <li><img src='/assets/img/{{this}}' alt="Imagen del producto"></li>
            {{/each}}
        </ul>
        <div class="card-body">
            <h5 class="card-title">{{product.title}}</h5>
            <p id="txtPrecioRea" class="card-text mostrar">{{product.price}} USD</p>
            <p id="estado" class="card-text">Stock disponible: {{product.stock}}</p>
            <p class="card-envio">Envio Gratis</p>
        </div>
    </div>
    {{else}}
    <div class="alert alert-warning" role="alert">
        El producto {{product.id}} no existe. Busque otro id producto.
    </div>
    {{/if}}

</div>

<script src="/socket.io/socket.io.js"></script>
